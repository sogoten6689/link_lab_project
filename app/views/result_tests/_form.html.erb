<%= form_for(@result_test, :url => (@result_test.new_record? ? result_tests_path : result_test_path(@result_test))) do |f| %>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6">

        <div class="form-group">
          <label for="result"><%= t('user_tests.fields.result')  %></label>
          <%= f.text_field :result, class: "form-control", id: "result", placeholder: t('user_tests.fields.result') %>
          <% @result_test.errors.full_messages_for(:result).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <label for="note"><%= t('user_tests.fields.note')  %></label>
          <%= f.text_field :note, class: "form-control", id: "note", placeholder: t('user_tests.fields.note') %>
          <% @result_test.errors.full_messages_for(:note).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

      </div>

    </div>
  </div>
  <div class="card-footer">
    <button type="submit" class="btn btn-primary" id="btnSubmit">
      <%= @result_test.new_record? ? t('button.new_btn') : t('button.edit_btn') %>
    </button>
    <%= link_to t('button.cancel_btn'), result_tests_path, class: "btn btn-danger"%>
  </div>
<% end %>

