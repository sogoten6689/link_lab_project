
<div class="content container-fluid">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">
              <%= t('labs.name') %>
            </h3>
            <div class="card-tools">
              <%= link_to t('labs.new'), new_admin_lab_url, class: "btn btn-primary"%>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>
                  <%= t('labs.fields.name') %>
                </th>
                <th>
                  <%= t('labs.fields.image') %>
                </th>
                <th>
                  <%= t('labs.fields.description') %>
                </th>
                <th>
                  <%= t('labs.fields.phone') %>
                </th>
                <th>
                  <%= t('labs.fields.address') %>
                </th>
                <th>
                  <%= t('labs.fields.user') %>
                </th>
                <th>
                  <%= t('labs.fields.action') %>
                </th>
              </tr>
              </thead>
              <tbody>
              <% @labs.each do |lab| %>
                <tr>
                  <td>
                    <%= lab.id %>
                  </td>
                  <td>
                    <%= lab.name %>
                  </td>
                  <td>
                    <%= lab.image %>
                  </td>
                  <td>
                    <%= lab.description %>
                  </td>
                  <td>
                    <%= lab.phone %>
                  </td>
                  <td>
                    <%= lab.address %>
                  </td>
                  <td>
                    <% if !lab.user_id.nil? %>
                      <%= lab.user.email %>
                    <% else %>
                    <%= t('labs.fields.null_email') %>
                    <% end %>
                  </td>
                  <td>
                    <%#= link_to "Show", book %>
                    <%= link_to edit_admin_lab_path(lab), class: "btn btn-warning btn-sm" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_lab_path(lab), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm"  do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          <!--          <div class="card-footer clearfix">-->
          <!--            <ul class="pagination pagination-sm m-0 float-right">-->
          <!--              <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>-->
