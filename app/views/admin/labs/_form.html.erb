<%= form_for(@lab, :url => (@lab.new_record? ? admin_labs_path : admin_lab_path(@lab))) do |f| %>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="name"><%= t('labs.fields.name') %></label>
          <%= f.text_field :name, class: "form-control", id: "name", placeholder: t('labs.fields.name') %>
          <% @lab.errors.full_messages_for(:name).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <label for="phone"><%= t('labs.fields.phone')  %></label>
          <%= f.text_field :phone, class: "form-control", id: "phone", placeholder: t('labs.fields.phone') %>
          <% @lab.errors.full_messages_for(:phone).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <label for="address"><%= t('labs.fields.address')  %></label>
          <%= f.text_field :address, class: "form-control", id: "address", placeholder: t('labs.fields.address') %>
          <% @lab.errors.full_messages_for(:address).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <% if !@lab.new_record? %>
          <div class="form-group">
            <label for="address"><%= t('labs.fields.user')  %></label>
            <%= f.select(:user_id, @users.collect {|u| [u.email, u.id]},{ include_blank: t('labs.fields.null_email') },{ :class => 'form-control'}) %>
            <% @lab.errors.full_messages_for(:user_id).each do |message| %>
              <div class="text-danger"><%= message %></div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="image"><%= t('labs.fields.image')  %></label>
          <%= f.file_field :image, class: "form-control", id: "image", placeholder: t('labs.fields.image') %>
          <% @lab.errors.full_messages_for(:image).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <label for="email"><%= t('doctors.fields.email')  %></label>
          <%= f.text_field :email, class: "form-control", id: "email", placeholder: t('doctors.fields.email') %>
          <% @lab.errors.full_messages_for(:email).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <label for="description"><%= t('labs.fields.description')  %></label>
          <%= f.text_area :description, class: "form-control", id: "lab", placeholder: t('labs.fields.description') %>
          <% @lab.errors.full_messages_for(:descriptionh).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <button type="submit" class="btn btn-primary">
      <%= @lab.new_record? ? t('button.new_btn') : t('button.edit_btn') %>
    </button>
    <%= link_to t('button.cancel_btn'), admin_labs_path, class: "btn btn-danger"%>
  </div>
<% end %>