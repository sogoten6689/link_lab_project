<!DOCTYPE html>
<html>
<head>
  <title>Admin LinkLab</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body data-scrollbar-auto-hide="n" class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">
    <%= render "base/header" %>
    <%= render "base/sidebar" %>

    <div class="content-wrapper">
      <div class="content-header">
        <%= render "base/breadcrumbs", { breadcrumbs: defined?(@breadcrumbs) ? @breadcrumbs : nil } %>
      </div>

<!--      <div class="content container-fluid">-->
<!--      <p class="notice"><%#= notice %></p>-->
<!--      <p class="alert"><%#= alert %></p>-->
<!--      <div class="container-fluid">-->
<!--      </div>-->
<!--    </div>-->

      <%= yield %>

    </div>

    <%= render "base/footer" %>
    <%= render "base/control_sidebar" %>
  </div>
</body>

</html>
