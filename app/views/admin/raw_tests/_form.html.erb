<%= form_for(@raw_test, :url => (@raw_test.new_record? ? admin_raw_tests_path : admin_raw_test_path(@raw_test))) do |f| %>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="name">
            <%= t('rawTests.fields.name') %>
          </label>
          <%= f.text_field :name, class: "form-control", id: "name", placeholder: t('rawTests.fields.name')%>
          <% @raw_test.errors.full_messages_for(:name).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <label for="cost">
            <%= t('rawTests.fields.cost') %>
          </label>
          <%= f.number_field :cost, class: "form-control", id: "cost", placeholder: t('rawTests.fields.cost')%>
          <% @raw_test.errors.full_messages_for(:cost).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <label for="tax">
            <%= t('rawTests.fields.tax') %>
          </label>
          <%= f.number_field :tax, class: "form-control", id: "tax", placeholder: t('rawTests.fields.tax')%>
          <% @raw_test.errors.full_messages_for(:tax).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="name">
            <%= t('rawTests.fields.test_type') %>
          </label>
          <%= f.select(:test_type_id, @test_types.collect {|u| [u.vi_name, u.id]},{},{ :class => 'form-control' }) %>
          <% @raw_test.errors.full_messages_for(:test_type_id).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <label for="note">
            <%= t('rawTests.fields.note') %>
          </label>
          <%= f.text_field :note, class: "form-control", id: "note", placeholder: t('rawTests.fields.note') %>
          <% @raw_test.errors.full_messages_for(:note).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <button type="submit" class="btn btn-primary">
      <%= @raw_test.new_record? ? t('button.new_btn') : t('button.edit_btn') %>
    </button>
    <%= link_to t('button.cancel_btn'), admin_raw_tests_path, class: "btn btn-danger"%>
  </div>
<% end %>