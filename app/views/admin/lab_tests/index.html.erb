
<div class="content container-fluid">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">
              <%= t('labTests.name') %>
            </h3>
            <div class="card-tools">
              <%= link_to t('labTests.new_button'), new_admin_lab_test_url, class: "btn btn-primary"%>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th><%= t('labTests.fields.name') %></th>
                <th><%= t('labTests.fields.lab') %></th>
<!--                                <th><%#= t('labTests.fields.note') %></th>-->

                <!--                <th><%#= t('labTests.fields.cost') %></th>-->
<!--                <th><%#= t('labTests.fields.tax') %></th>-->
                <th><%= t('labTests.fields.action') %></th>
              </tr>
              </thead>
              <tbody>
              <% @lab_tests.each do |lab_test| %>
                <tr>
                  <td>
                    <%= lab_test.id %>
                  </td>
                  <td>
                    <%= lab_test.raw_test.name %>
                  </td>
<!--                  <td>-->
                    <%#= lab_test.note %>
<!--                  </td>-->
                  <td>
                    <%= lab_test.lab.name %>
                  </td>
<!--                  <td>-->
                    <%#= lab_test.cost %>
<!--                  </td>-->
<!--                  <td>-->
                    <%#= lab_test.tax %>
<!--                  </td>-->
                  <td>
                    <%#= link_to "Show", book %>
                    <%= link_to edit_admin_lab_test_path(lab_test), class: "btn btn-warning btn-sm" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_lab_test_path(lab_test), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" do %>
                      <i class="fas fa-trash"></i>
                  <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
