<%= form_for(@lab_test, :url => (@lab_test.new_record? ? admin_lab_tests_path : admin_lab_test_path(@lab_test))) do |f| %>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="name">
            <%= t('labTests.fields.raw_test') %>
          </label>
          <%= f.select(:raw_test_id, @raw_tests.collect {|u| [u.name, u.id]},{},{ :class => 'form-control' }) %>
          <% @lab_test.errors.full_messages_for(:raw_test_id).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
<!--        <div class="form-group">-->
<!--          <label for="name">-->
            <%#= t('labTests.fields.name') %>
<!--          </label>-->
          <%#= f.text_field :name, class: "form-control", id: "name", placeholder: t('labTests.fields.name')%>
          <%# @lab_test.errors.full_messages_for(:name).each do |message| %>
<!--            <div class="text-danger"><%#= message %></div>-->
          <%# end %>
<!--        </div>-->
        <div class="form-group">
          <label for="cost">
            <%= t('labTests.fields.lab_price') %>
          </label>
          <%= f.number_field :lab_price, class: "form-control", id: "lab_price", placeholder: t('labTests.fields.lab_price')%>
          <% @lab_test.errors.full_messages_for(:lab_price).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <div class="custom-control custom-switch">
            <%= f.check_box :is_lab_price, class: "custom-control-input", id: "is_lab_price", placeholder: t('labTests.fields.is_lab_price') %>
            <input type="checkbox" class="custom-control-input" id="customSwitch1">
            <label class="custom-control-label" for="is_lab_price"><%= t('labTests.fields.is_lab_price') %></label>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="lab"><%= t('labTests.fields.lab')  %></label>
          <%= f.select(:lab_id, @labs.collect {|u| [u.name, u.id]},{ include_blank: t('labTests.fields.null_lab') },{ :class => 'form-control disable'}) %>
          <% @lab_test.errors.full_messages_for(:lab_id).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <label for="tax">
            <%= t('labTests.fields.lab_tax') %>
          </label>
            <%= f.number_field :lab_tax, class: "form-control", id: "lab_tax", placeholder: t('labTests.fields.lab_tax')%>
            <% @lab_test.errors.full_messages_for(:lab_tax).each do |message| %>
            <div class="text-danger"><%= message %></div>
            <% end %>
        </div>

        <div class="form-group">
          <div class="custom-control custom-switch">
            <%= f.check_box :active, class: "custom-control-input", id: "active", placeholder: t('labTests.fields.active') %>
            <input type="checkbox" class="custom-control-input" id="active">
            <label class="custom-control-label" for="active"><%= t('labTests.fields.active') %></label>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <button type="submit" class="btn btn-primary">
      <%= @lab_test.new_record? ? t('button.new_btn') : t('button.edit_btn') %>
    </button>
    <%= link_to t('button.cancel_btn'), admin_lab_tests_path, class: "btn btn-danger"%>
  </div>
<% end %>